<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        style="@style/match_wrap">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin_3">

            <LinearLayout
                style="@style/linear_layout_horizontal_match_wrap"
                android:layout_margin="@dimen/margin_3"
                >

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#66c2c2c0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/tv_appointmentdate"
                        android:text="25"
                        android:layout_marginTop="7dp"
                       />

                    <TextView
                        android:id="@+id/tv_month"
                        style="@style/tv_appointmentdate"
                        android:text="Mar"
                     />
                </LinearLayout>

                <LinearLayout
                style="@style/linear_layout_vertical_match_wrap"
                android:padding="4dp">

                <TextView
                  style="@style/match_wrap"
                    android:textSize="8sp"
                    android:id="@+id/tv_appointmentname"
                   />
                 <TextView
                    style="@style/match_wrap"
                     android:textSize="8sp"
                     android:id="@+id/tv_appointmentstatus"/>
            </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>


</LinearLayout>