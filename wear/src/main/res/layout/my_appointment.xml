<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_appointment"
        style="@style/linear_layout_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.google.android.material.card.MaterialCardView style="@style/materialcardview">

            <LinearLayout style="@style/linear_layout_vertical">

                <ImageView
                    android:id="@+id/iv_appointment"
                    style="@style/ImageViewStyle2"
                    android:src="@drawable/ic_myorders" />

                <RelativeLayout style="@style/wrap_wrap"
                    android:layout_marginBottom="@dimen/marginBottom_5"
                    android:layout_marginRight="@dimen/marginRight">

                    <TextView
                        android:id="@+id/tv_appointment"
                        style="@style/TextViewStyle1"
                        android:paddingRight="@dimen/paddingRight_12"
                        android:text="@string/my_appointment" />

                    <TextView
                        android:id="@+id/tv_appointmentcount"
                        style="@style/relative_ellipse_textview"
                        android:background="@drawable/ic_ellipse"
                        android:text="5" />

                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</RelativeLayout>