<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_vital"
    >
        <com.google.android.material.card.MaterialCardView
            style="@style/materialcardview"
            >
            <LinearLayout style="@style/linear_layout_vertical">

                <ImageView
                    android:id="@+id/iv_vitals"
                    style="@style/ImageViewStyle2"
                    android:src="@drawable/ic_vitals" />


                <RelativeLayout
                    style="@style/wrap_wrap"
                    android:layout_marginBottom="@dimen/marginBottom_5"
                    android:layout_marginRight="@dimen/marginRight"
                    >

                    <TextView
                        android:id="@+id/myvitals"
                        style="@style/TextViewStyle1"
                        android:text="@string/my_vitals"
                        />
                    <TextView
                        style="@style/relative_ellipse_textview"
                        android:background="@drawable/ic_ellipse"
                        android:id="@+id/tv_vitalcount"
                        android:gravity="center"
                        android:text=""
                        />
               </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

</LinearLayout>
    <FrameLayout
        style="@style/match_match"
        android:visibility="invisible"
        android:id="@+id/lay_container"
        >
    </FrameLayout>

</RelativeLayout>