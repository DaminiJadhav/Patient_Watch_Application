<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/match_match"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/lay_child_container"
       style="@style/match_match"
        android:layout_margin="@dimen/margin_5"
        >
        <LinearLayout
           style="@style/linear_layout_vertical"
            android:id="@+id/lay_vitals"
          >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_my_vital"
                style="@style/match_wrap"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabIndicatorHeight="4dp"
                app:tabIndicatorColor="@color/white"
                app:tabMode="scrollable" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager_my_vital"
                style="@style/match_match"
                android:layout_below="@+id/tab_layout_my_vital"
                android:layout_gravity="center"
                android:padding="@dimen/padding_5dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/emptyView"
            android:visibility="gone"
            style="@style/wrap_wrap"
            android:layout_centerInParent="true"
            android:text="No Vitals added!"
            android:textSize="20dp"
            />




    </RelativeLayout>
</LinearLayout>
