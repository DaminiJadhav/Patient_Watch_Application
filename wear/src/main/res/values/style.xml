<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="image_width41_height35">
        <item name="android:layout_width">41dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="TextViewStyle" parent="match_wrap">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewStyle_layoutgravity" parent="wrap_wrap">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="TextViewStyle1" parent="wrap_wrap">
        <!--<item name="android:layout_marginLeft">@dimen/marginLeft_45</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="linear_layout_vertical" parent="match_match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_layout_horizontal" parent="match_match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout_vertical_match_wrap" parent="match_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_layout_horizontal_match_wrap" parent="match_wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout_vertical_wrap_wrap" parent="wrap_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextInputLayout1" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>

    <style name="margintop" parent="wrap_wrap">
         <item name="android:layout_marginTop">@dimen/screen_percentage_15</item>
    </style>

    <style name="btn_style" parent="match_wrap">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>

    <style name="btn_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:background">@drawable/shape</item>
    </style>

    <style name="progressbar">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ImageViewStyle1">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <style name="ImageViewStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="ImageViewStyle2" parent="wrap_wrap">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/marginTop_40</item>
    </style>



    <style name="materialcardview" parent="match_match">
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">100dp</item>
    </style>

    <style name="relative_ellipse_textview">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
         <item name="android:gravity">center</item>
    </style>

    <style name="linelayhorizontal_weight" >
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linelayvertical_weight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="lay_cintainer" parent="match_wrap">
        <item name="android:weightSum">10</item>
    </style>

    <style name="tv_popup_sub_title" parent="match_wrap">
        <item name="android:layout_weight">4</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="tv_popup_title" parent="match_wrap">
        <item name="android:textColor">@color/title_color_dialog</item>
        <item name="android:layout_weight">6</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tv_popup_sutitile_blue" parent="tv_popup_sub_title">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="toggle_button" parent="wrap_wrap">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_20</item>
        <item name="android:checked">false</item>
    </style>

    <style name="bell_notification">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <!--<item name="android:layout_alignParentRight">true</item>-->
        <item name="android:src">@drawable/ic_notification1</item>
    </style>

    <style name="bell_notification_count">
            <item name="android:layout_width">10dp</item>
            <item name="android:layout_height">10dp</item>
            <!--<item name="android:layout_alignParentRight">true</item>-->
            <item name="android:background">@drawable/notification_shape</item>
            <item name="android:gravity">center</item>
            <item name="android:textSize">6sp</item>
            <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_usernotification" parent="wrap_wrap">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_margin">@dimen/margin_3</item>
    </style>

    <style name="tv_appointmentdate" parent="match_wrap">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_appointment_tv_background</item>
    </style>

    <style name="iv_logout">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_3</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_logout</item>
    </style>
    
    <style name="showmedicinereminders" parent="wrap_wrap">
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>