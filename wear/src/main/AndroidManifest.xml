<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.syntagi.patient_watch_application">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".EnterPhoneNumberActivity"
            android:label="@string/app_name" />
        <activity android:name=".OtpActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".PatientRegistration" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED"/> -->

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyMedicineList" />
        <activity android:name=".MyVitalList" />
        <activity android:name=".MedicineDetailActivity"/>

        <activity android:name=".MedicineEnddateHeader"></activity>
    </application>

</manifest>